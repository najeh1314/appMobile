<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtHistory"
        style="@style/HistoryStyle"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#6F45BA"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </TextView>

    <TextView
        android:id="@+id/txtScreen"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#5BA8A7A7"
        android:textAlignment="viewStart"
        android:textColor="#673AB7"
        android:textSize="24sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txtHistory"
        app:layout_constraintTop_toBottomOf="@id/txtHistory"></TextView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonPanel"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        app:layout_constraintTop_toBottomOf="@id/txtScreen">

        <LinearLayout
            android:id="@+id/col1"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.185"
            android:layout_height="390dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toLeftOf="parent">

            <Button
                android:id="@+id/btnSin"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/buttons"
                android:text="sin"></Button>

            <Button
                android:id="@+id/btnOpenPar"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:text="(">
                </Button>

            <Button
                android:id="@+id/btn7"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:background="@color/material_dynamic_neutral70"
                android:backgroundTint="#BDB5B5"
                android:text="7"></Button>
            <Button
                android:id="@+id/btn4"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="4">
            </Button>
            <Button
                android:id="@+id/btn1"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="1">
            </Button>

            <Button
                android:id="@+id/btn0"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:text="0">
                </Button>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/col2"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.185"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toRightOf="@id/col1">
            <Button
                android:id="@+id/btnCos"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="cos">
            </Button>
            <Button
                android:id="@+id/btnClosePar"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=")">
            </Button>
            <Button
                android:id="@+id/btn8"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="8">
            </Button>
            <Button
                android:id="@+id/btn5"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="5">
            </Button>
            <Button
                android:id="@+id/btn2"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="2">
            </Button>
            <Button
                android:id="@+id/btn00"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="00">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/col3"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.185"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toRightOf="@id/col2">
            <Button
                android:id="@+id/btnTan"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="tan">
            </Button>
            <Button
                android:id="@+id/btnPi"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="π">
            </Button>
            <Button
                android:id="@+id/btn9"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="9">
            </Button>
            <Button
                android:id="@+id/btn6"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="6">
            </Button>
            <Button
                android:id="@+id/btn3"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="3">
            </Button>
            <Button
                android:id="@+id/btnDot"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=".">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/col4"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.185"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toRightOf="@id/col3">
            <Button
                android:id="@+id/btnPower"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="xⁿ">
            </Button>
            <Button
                android:id="@+id/btnRootSquare"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="√">
            </Button>
            <Button
                android:id="@+id/btnSum"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="+">
            </Button>
            <Button
                android:id="@+id/btnMinus"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="-">
            </Button>
            <Button
                android:id="@+id/btnMultiply"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="*">
            </Button>
            <Button
                android:id="@+id/btnDevide"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="/">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/col5"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.185"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toRightOf="@id/col4">
            <Button
                android:id="@+id/btnAC"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="AC">
            </Button>
            <Button
                android:id="@+id/btnDelete"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="⌫">
            </Button>
            <Button
                android:id="@+id/btnSquarre"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="x²">
            </Button>
            <Button
                android:id="@+id/btnInverse"
                style="@style/ButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="1/x">
            </Button>

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:layout_marginTop="4dp"
                style="@style/ButtonStyle"
                android:text="="></Button>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>