<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/buttons</item> <!-- Appliquer le fond du bouton -->
        <item name="android:textColor">#FFFFFF</item> <!-- Couleur du texte -->
    </style>
    <style name="HistoryStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/historic</item> <!-- Appliquer le fond du bouton -->
        <item name="android:textColor">#000000</item> <!-- Couleur du texte -->
        <item name="android:textSize">20dp</item>
    </style>
    <style name="ScreenStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/screen</item> <!-- Appliquer le fond du bouton -->
        <item name="android:textColor">#673AB7</item> <!-- Couleur du texte -->
        <item name="android:textSize">40dp</item>
        <item name="android:gravity">center_vertical</item> <!-- Centrer verticalement le texte -->

    </style>
</resources>
